<% include ../partials/header %>

<div class="container">
    <div class="row">
        <h1 style="text-align: center">Add a New Comment to <%= camp.name %></h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/campgrounds/<%= camp._id %>/comments" method="POST">
                <div class="form-group">
                    <p><strong>Author: <%= currentUser.username %></strong></p>
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" placeholder="Comment" name="comment[text]">
                </div>
                <div class="form-group">
                    <button class="btn btn-primary btn-lg btn-block">Submit</button>
                </div>
            </form>
            <a class="btn btn-primary btn-lg btn-block" href="/campgrounds/<%= camp._id %>">Back</a>
        </div>
    </div>
</div>



<% include ../partials/footer %>